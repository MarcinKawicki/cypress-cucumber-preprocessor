{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "target": "ES2017",
    "module": "CommonJS",
    "types": ["node", "cypress"],
    "lib": ["dom", "ES2021"]
  },
  "include": [
    "lib/**/*.ts",
    "augmentations.d.ts",
    "declarations.d.ts"
  ]
}
